<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--     <include resource="org/springframework/boot/logging/logback/base.xml" />-->

    <!-- <property name="LOG_PATH " value="logs" /> -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!--  ghi log ra file, appender FILE
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/log.log</file>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/log_%d{dd-MM-yyyy}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    -->

    <!-- Cấu hình logger cho một package cụ thể -->
    <logger name="com.lankydan.service" additivity="false" level="debug">
        <appender-ref ref="CONSOLE"/>
        <!-- <appender-ref ref="FILE"/> -->
    </logger>

    <!-- Cấu hình root logger theo profile -->
    <springProfile name="dev">
        <root level="info">
            <appender-ref ref="CONSOLE"/>
            <!-- <appender-ref ref="FILE"/> -->
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="info">
            <!-- Ở môi trường prod, chỉ ghi ra console -->
            <appender-ref ref="CONSOLE"/>
            <!-- <appender-ref ref="FILE"/> -->
        </root>
    </springProfile>

</configuration>
